<!--#if (Framework == "net8.0")-->
<Project Sdk="Microsoft.NET.Sdk">
<!--#else-->
<Project Sdk="Aspire.AppHost.Sdk/13.1.0">
<!--#endif-->
<!--#if (Framework == "net8.0")-->
  <Sdk Name="Aspire.AppHost.Sdk" Version="13.0.2" />
<!--#endif-->
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
<!--#if (Framework == "net8.0")-->
    <IsAspireHost>true</IsAspireHost>
<!--#endif-->
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ABC.Template.Web\ABC.Template.Web.csproj" />
  <!--#if (Database != "Sqlite")-->
    <ProjectReference Include="..\ABC.Template.MigrationService\ABC.Template.MigrationService.csproj" />
  <!--#endif-->
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Aspire.Hosting.AppHost" />
    <PackageReference Include="Aspire.Hosting.Docker" />
    <!--#if (UseMySql)-->
    <PackageReference Include="Aspire.Hosting.MySql" />
<!--#elif (UseSqlServer)-->
    <PackageReference Include="Aspire.Hosting.SqlServer" />
<!--#elif (UsePostgreSQL)-->
    <PackageReference Include="Aspire.Hosting.PostgreSQL" />
<!--#elif (UseGaussDB)-->
    <PackageReference Include="NetCorePal.Aspire.Hosting.OpenGauss" />
<!--#elif (UseDMDB)-->
    <PackageReference Include="NetCorePal.Aspire.Hosting.DMDB" />
<!--#endif-->
    <PackageReference Include="Aspire.Hosting.Redis" />
<!--#if (UseRabbitMQ)-->
    <PackageReference Include="Aspire.Hosting.RabbitMQ" />
<!--#elif (UseKafka)-->
    <PackageReference Include="Aspire.Hosting.Kafka" />
<!--#endif-->
  </ItemGroup>

</Project>
